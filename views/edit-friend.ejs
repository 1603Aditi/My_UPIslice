<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <h3>Edit Friend</h3>
  <form action="/friends/<%= friend._id %>?_method=PUT" method="POST">
    <div class="mb-3">
      <label class="form-label">Name</label>
      <input type="text" name="name" class="form-control" value="<%= friend.name %>" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Email</label>
      <input type="email" name="email" class="form-control" value="<%= friend.email %>" required>
    </div>
    <button type="submit" class="btn btn-success">Update</button>
    <a href="/main" class="btn btn-secondary">Cancel</a>
  </form>
</div>
